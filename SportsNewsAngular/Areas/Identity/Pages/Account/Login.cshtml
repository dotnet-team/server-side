@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<style>

	#border {
		border-radius: 0;
		box-shadow: none;
	}

	.create-acc {
		margin-left: 200px;
		margin-top: 5vh;
		margin-bottom: 8vh;
		width: 600px;
	}

	.searchButtn {
		border-radius: 0;
		width: 170px;
	}

	.color {
		background-color: #d72130;
		color: white;
		box-shadow: none;
	}
</style>

<div class="create-acc">
	<table>
		<tr>
			<td><div style="margin-right:20px;">Don`t have an account?</div></td>
			<td><a asp-page="./Register">
				<button class="btn btn-sm btn-outline-danger my-2 my-sm-0 searchButtn" type="submit">Get Started</button>
				</a>
			</td>
		</tr>
	</table>
</div>

<div style="width:300px;">
	<section>
		<form id="account" method="post">
			<h3>@ViewData["Title"]</h3>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				<input id="border" asp-for="Input.Email" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input id="border" asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<button type="submit" id="border" class="btn form-control color">Log in</button>
			</div>
			<div class="form-group">
				<p>
					<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
				</p>
				<p>
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
				</p>
			</div>
			<h4>Use another service.</h4>
			<hr />
			@{
				if ((Model.ExternalLogins?.Count ?? 0) == 0)
				{
					<div>
						<p>
							There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
							for details on setting up this ASP.NET application to support logging in via external services.
						</p>
					</div>
				}
				else
				{
					<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
						<div>
							<p>
								@foreach (var provider in Model.ExternalLogins)
								{
									<button type="submit" class="btn color" id="border" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
								}
							</p>
						</div>
					</form>
				}
			}
		</form>
	</section>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
